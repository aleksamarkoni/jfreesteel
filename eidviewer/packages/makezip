#!/bin/bash

VERSION="1.0"
OUTPUT="jfreesteel-eidviewer-$VERSION"
TARGET="../target"

rm -f "$TARGET/$OUTPUT/$OUTPUT.zip"
mkdir -p "$TARGET/$OUTPUT"
cp "$TARGET/eidviewer-$VERSION.jar" "$TARGET/$OUTPUT"
cp deb/eidviewer "$TARGET/$OUTPUT"
cp -r "$TARGET/dependency" "$TARGET/$OUTPUT"
pushd "$TARGET" && zip -r "$OUTPUT.zip" "$OUTPUT" && popd
rm -fr "$TARGET/$OUTPUT"
